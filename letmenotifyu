#!/usr/bin/python3

import os
import sys

from notifylib.create import create_database
from notifylib.create import upgrade_database
from notifylib.main import Main

#sys.path.append("/usr/share/letmenotifyu/")

os.chdir("ui")
directory_path=os.environ['HOME']+'/.local/share/letmenotifyu/'
db_file=directory_path+'dev.sqlite'

if __name__ == "__main__":
     if os.path.isfile(db_file):
         upgrade_database(db_file)
         Main('main7.glade', 'letmenotifyu.png', db_file)
     else:
         try:
             os.makedirs(directory_path)
         except FileExistsError as e:
            create_database(db_file)
            Main('main7.glade', 'letmenotifyu.png', db_file)
   
