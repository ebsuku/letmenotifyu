#!/usr/bin/python3

import os
import logging
from notifylib.createdb import Database
from notifylib.main import Main

directory_path = os.environ['HOME']+'/.local/share/letmenotifyu/'

os.chdir("ui")
db_file = directory_path+'dev.sqlite'


def log():
    logging.basicConfig(filename = directory_path+'dev.log',
                        format = '%(asctime)s - %(message)s', filemode = 'w',
                        level = logging.DEBUG)

if __name__ == "__main__":
    try:
        log()
        db = Database(db_file)
        db.upgrade_database()
    except Exception as e:
        if os.path.isdir(directory_path):
            log()
            db = Database(db_file)
            db.create_database()
        else:
            os.makedirs(directory_path)
            log()
            db = Database(db_file)
            db.create_database()
    finally:
        Main('main.glade', 'letmenotifyu.png', db_file)
