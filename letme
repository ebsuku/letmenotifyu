#!/usr/bin/python3

import logging
import os
from multiprocessing import Process
from letmenotifyu import database as db
from letmenotifyu.main import Main
from letmenotifyu import settings
from letmenotifyu import util
from letmenotifyu import background_worker as bw

log = logging.getLogger(__name__)
os.chdir(settings.DATA_FILES_PATH)


if __name__ == "__main__":
    util.start_logging()
    try:
        settings.check_db()
    except ValueError:
        log.info("creating new databases")
        db.create_general_db()
        db.create_movie_db()
        db.create_series_db()
    finally:
        db.general_migration()
        db.movie_migration()
        db.series_migration()
        Main()
